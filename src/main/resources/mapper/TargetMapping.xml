<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ss.crm.mapper.TargetMapper">
    <select id="targetGetMonthType" resultType="Integer">
        select type_target from t_target where date_format(edit_date,'%Y-%m')=date_format(now(),'%Y-%m')
    </select>

    <select id="targetGetDayType" resultType="Integer">
        select type_target from t_target where YEARWEEK(date_format(edit_date,'%Y-%m-%d')) = YEARWEEK(now())
    </select>
    <resultMap id="targetResultMap" type="user" autoMapping="true">

    </resultMap>

</mapper>